<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DurumGecmisiActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#d80000"
        android:padding="15dp"
        android:text="Geri" />

    <Button
        android:id="@+id/btn_viewdata"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#ff6a00"
        android:padding="15dp"
        android:text="Verileri Göster" />

    <Button
        android:id="@+id/btn_gps"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#ff6a00"
        android:padding="15dp"
        android:text="GPS HIZINI ÖLÇ" />

    <TextView
        android:id="@+id/txt_veri"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_veri1"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_veri2"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textStyle="bold" />

</RelativeLayout>